{
  "name": "mr",
  "displayName": "GitLab MR",
  "description": "合并分支申请",
  "publisher": "leroy-magpie",
  "author": {
    "name": "leroy-magpie",
    "email": "954506993@qq.com"
  },
  "categories": [
    "Other"
  ],
  "icon": "src/assets/icons/gitlab-logo.png",
  "version": "0.0.17",
  "engines": {
    "vscode": "^1.34.0"
  },
  "license": "SEE LICENSE IN LICENSE",
  "repository": {
    "type": "git",
    "url": "https://github.com/leroy-magpie/mr.git"
  },
  "main": "src/extension.js",
  "activationEvents": [
    "onCommand:gitlab-mr.open",
    "onCommand:gitlab-mr.refresh",
    "onView:gitlab-mr.webview"
  ],
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "gitlab-mr",
          "title": "GitLab MR",
          "icon": "src/assets/icons/logo.svg"
        }
      ]
    },
    "views": {
      "gitlab-mr": [
        {
          "id": "gitlab-mr.webview",
          "name": "GitLab MR",
          "type": "webview",
          "contextualTitle": "新建合并申请"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "when": "view == gitlab-mr.webview",
          "group": "navigation",
          "command": "gitlab-mr.refresh"
        }
      ]
    },
    "commands": [
      {
        "command": "gitlab-mr.open",
        "title": "mr",
        "category": "GitLab MR"
      },
      {
        "command": "gitlab-mr.refresh",
        "title": "refresh",
        "category": "GitLab MR",
        "icon": {
          "light": "src/assets/icons/refresh.svg",
          "dark": "src/assets/icons/refresh.svg"
        }
      }
    ]
  },
  "extensionDependencies": [
    "vscode.git"
  ],
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "node ./test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.34.0",
    "@types/glob": "^7.1.4",
    "@types/mocha": "^9.0.0",
    "@types/node": "14.x",
    "eslint": "^8.1.0",
    "glob": "^7.1.7",
    "mocha": "^9.1.3",
    "typescript": "^4.4.4",
    "@vscode/test-electron": "^1.6.2"
  },
  "dependencies": {
    "opener": "^1.5.2"
  }
}
